@{
    ViewData["Title"] = "Home";
}



<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 font-weight-bold">Bienvenido a Carrito de Compras</h1>
        <p class="lead">Tu mejor opción para compras en línea</p>
        <img src="https://14306541.s21i.faimallusr.com/2/ABUIABACGAAgmd7mywUohorDowMw9AM4ogI!1000x1000.jpg.webp" alt="Carrito de Compras" class="img-fluid my-4" style="border-radius: 10px; max-width: 100%; height: auto;" />
        <div class="mt-4">
            <a href="/Productos" class="btn btn-primary btn-lg mx-2">Ver Productos</a>
            <a href="/Categorias" class="btn btn-primary btn-lg mx-2">Categorías</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/100" alt="Calidad" class="img-fluid rounded-circle mb-3">
            <h3>Calidad</h3>
            <p>Productos de alta calidad a los mejores precios.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/100" alt="Variedad" class="img-fluid rounded-circle mb-3">
            <h3>Variedad</h3>
            <p>Gran selección de productos para todas tus necesidades.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/100" alt="Soporte" class="img-fluid rounded-circle mb-3">
            <h3>Soporte</h3>
            <p>Atención al cliente 24/7 para asistirte en todo momento.</p>
        </div>
    </div>

</div>

<footer class="bg-light text-center text-lg-start mt-5">
    <div class="container p-4">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5 class="text-uppercase">Carrito de Compras</h5>
                <p>Tu tienda en línea confiable y segura para todas tus necesidades de compras.</p>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                <h5 class="text-uppercase">Contacto</h5>
                <ul class="list-unstyled mb-0">
                    <li>
                        <p class="text-dark">Email: info@carritodecompras.com</p>
                    </li>
                    <li>
                        <p class="text-dark">Teléfono: +54 11-56983652</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="text-center p-3 bg-dark text-white">
        © 2024 Carrito de Compras. Todos los derechos reservados.
    </div>
</footer>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}